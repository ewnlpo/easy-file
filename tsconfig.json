// tsconfig.json
{
  "compilerOptions": {
    "outDir": "dist",
    // 用于解析非相对模块名的基准目录
    "baseUrl": ".",
    // 路径映射配置，允许使用别名导入模块
    "paths": {
      "@easy-file/*": [
        "./packages/*/src"
      ],
    },
    // 指定生成的模块代码,ESNext表示使用最新的ES模块语法
    "module": "ESNext",
    // 指定ECMAScript目标版本,ESNext表示最新版本
    "target": "ESNext", 
    // 选择模块解析策略,Node表示使用Node.js的模块解析算法
    "moduleResolution": "Node",
    // 允许使用import默认导入CommonJS模块
    "esModuleInterop": true,
    // 启用所有严格的类型检查选项
    "strict": true,
    // 跳过声明文件的类型检查,可以提高编译速度
    "skipLibCheck": true
  },
  // 指定要包含的文件/文件夹
  "include": [
    "packages"
  ]
}